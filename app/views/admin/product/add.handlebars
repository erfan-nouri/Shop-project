<div class="content-body">

    <!-- Page Headings Start -->
    <div class="row justify-content-between align-items-center mb-10">

        <!-- Page Heading Start -->
        <div class="col-12 col-lg-auto mb-20">
            <div class="page-heading">
                <h3>تجارت الکترونیکی <span>/ افزودن محصول</span></h3>
            </div>
        </div><!-- Page Heading End -->


    </div><!-- Page Headings End -->

    <!-- Add or Edit Product Start -->
    <div class="add-edit-product-wrap col-12">

        <div class="add-edit-product-form">
            <form action="/admin/product/add" method="post" enctype="multipart/form-data">


                <div class="row">
                    <div class="col-lg-6 col-12 mb-30">
                        <h4 class="title">نام محصول</h4>
                        <input class="form-control" name="title" type="text" placeholder="نام محصول / عنوان*">
                    </div>
                    <div class="col-lg-6 col-12 mb-30">
                        <h4 class="title">زیر عنوان محصول</h4>
                        <input class="form-control" type="text" placeholder="عنوان زیر محصول">
                    </div>
                    <div class="col-lg-6 col-12 mb-30">
                        <h4 class="title">قیمت محصول</h4>
                        <input class="form-control" name="sale_price" type="number" placeholder="قیمت محصول*">
                    </div>
                    <div class="col-lg-6 col-12 mb-30">
                        <h4 class="title">قیمت با تخفیف محصول</h4>
                        <input class="form-control" name="off_price" type="number" placeholder="تخفیف محصول">
                    </div>
                    <div class="col-12 mb-30">
                        <h4 class="title">توضیحات محصول</h4>
                        <textarea class="form-control" name="description" placeholder="توضیحات محصول*"></textarea>
                    </div>
                    {{!-- <div class="col-lg-6 col-12 mb-30">
                        <h4 class="title"> وضعیت محصول</h4>

                        <select name="status" class="form-control select2">
                            <option value="1">موجود</option>
                            <option value="0">ناموجود</option>
                        </select>
                    </div> --}}
                    <div class="col-lg-6 col-12 mb-30">
                        <h4 class="title">نامک</h4><input class="form-control" name="slug" type="text"
                            placeholder="slug">
                    </div>
                    <div class="col-lg-6 col-12 mb-30">
                        <h4 class="title">دسته بندی محصول</h4>
                        <select name="category" class="form-control nice-select">
                            {{#each category}}
                            <option value="{{this.id}}">{{this.title}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-lg-6 col-12 mb-30"><h4 class="title">موجودی</h4><input class="form-control" name="quantity" type="text"
                            placeholder="موجودی" value="0"></div>
                </div>

                <h4 class="title">گالری محصول</h4>

                <div class="product-upload-gallery row flex-wrap">
                    <div class="col-12 mb-30">
                        <p class="form-help-text mt-0">آپلود حداکثر 800 × 800 پیکسل و حداکثر اندازه 2 مگابایت.</p>
                        <input class="file-pond" type="file" name="thumbnail" id="thumbnail" >

                    </div>
                </div>

                <h4 class="title">اطلاعات اضافی</h4>

                <div class="row">
                    <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" placeholder="اطلاعات 1">
                    </div>
                    <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" placeholder="اطلاعات 2">
                    </div>
                    <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" placeholder="اطلاعات 3">
                    </div>
                    <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" placeholder="اطلاعات 4">
                    </div>
                    <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" placeholder="اطلاعات 5">
                    </div>
                    <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" placeholder="اطلاعات 6">
                    </div>
                </div>

                <!-- Button Group Start -->
                <div class="row">
                    <div class="d-flex flex-wrap justify-content-end col mbn-10">
                        <button class="button button-outline button-primary mb-10 ml-10 mr-0">ذخیره و انتشار</button>
                        <button class="button button-outline button-info mb-10 ml-10 mr-0">ذخیره پیش نویس</button>
                        <button class="button button-outline button-danger mb-10 ml-10 mr-0">حذف محصول</button>
                    </div>
                </div><!-- Button Group End -->

            </form>
        </div>

    </div><!-- Add or Edit Product End -->

</div>