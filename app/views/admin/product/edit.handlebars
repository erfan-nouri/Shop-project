<div class="content-body">

            <!-- Page Headings Start -->
            <div class="row justify-content-between align-items-center mb-10">

                <!-- Page Heading Start -->
                <div class="col-12 col-lg-auto mb-20">
                    <div class="page-heading">
                        <h3>تجارت الکترونیکی <span>/ ویرایش محصول</span></h3>
                    </div>
                </div><!-- Page Heading End -->



            </div><!-- Page Headings End -->

            <!-- Add or Edit Product Start -->
            <div class="add-edit-product-wrap col-12">

                <div class="add-edit-product-form">
                    <form action="/admin/product/edit/?productId={{productData.id}}" method="Post" enctype="multipart/form-data">


                        <div class="row">
                            
                            <div class="col-lg-6 col-12 mb-30"><h4 class="title">نام محصول</h4><input class="form-control" name="title" type="text" value="{{productData.title}}"></div>
                            <div class="col-lg-6 col-12 mb-30"><h4 class="title">زیر عنوان محصول</h4><input class="form-control" type="text" value="{{productData.title}}"></div>
                            <div class="col-lg-6 col-12 mb-30"><h4 class="title">قیمت محصول</h4><input class="form-control" name="sale_price" type="number" value="{{productData.sale_price}}"></div>
                            <div class="col-lg-6 col-12 mb-30"><h4 class="title">قیمت با تخفیف</h4><input class="form-control" name="off_price" type="number" value="{{productData.off_price}}"></div>
                            <div class="col-12 mb-30"><h4 class="title">توضیحات محصول</h4><textarea name="description" class="form-control">{{productData.description}}</textarea></div>
                            {{!-- <div class="col-lg-6 col-12 mb-30"><h4 class="title">وضعیت محصول</h4>
                                <select name="status" class="form-control nice-select">
                                    <option value="1" name="active" {{#isActive productData.isActive}} selected="true" {{/isActive}}>موجود</option>
                                    <option value="0"  {{#isActive productData.isActive}}selected="true"{{/isActive}} >ناموجود</option>
                                </select>
                            </div> --}}
                            <div class="col-lg-6 col-12 mb-30"><h4 class="title">نامک</h4><input class="form-control" name="slug" type="text" value="{{productData.slug}}"></div>
                            <div class="col-lg-6 col-12 mb-30"><h4 class="title">دسته بندی محصول</h4>
                                <select name="category" class="form-control nice-select">
                                    {{#each category}}
                                    <option value="{{this.id}}"{{#category this.id}}selected="true"{{/category}}>{{this.title}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-lg-6 col-12 mb-30"><h4 class="title">موجودی محصول</h4><input class="form-control" name="quantity" type="text" value="{{quantityData.quantity}}"></div>
                        </div>

                        <h4 class="title">گالری محصول</h4>

                        <div class="product-upload-gallery row flex-wrap">
                            <div class="col-12 mb-30">
                                <p class="form-help-text mt-0">آپلود حداکثر 800 × 800 پیکسل و حداکثر اندازه 2 مگابایت.</p>
                                <input class="file-pond" name="thumbnail" id type="file" multiple>
                            </div>
                        </div>

                        <h4 class="title">اطلاعات اضافی</h4>

                        <div class="row">
                            <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" value="اطلاعات 1"></div>
                            <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" value="اطلاعات 2"></div>
                            <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" value="اطلاعات 3"></div>
                            <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" value="اطلاعات 4"></div>
                            <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" value="اطلاعات 5"></div>
                            <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" value="اطلاعات 6"></div>
                        </div>

                        <!-- Button Group Start -->
                        <div class="row">
                            <div class="d-flex flex-wrap justify-content-end col mbn-10">
                                <button class="button button-outline button-primary mb-10 ml-10 mr-0">ذخیره و انتشار</button>
                                <button class="button button-outline button-info mb-10 ml-10 mr-0">ذخیره پیش نویس</button>
                                <button class="button button-outline button-danger mb-10 ml-10 mr-0">حذف محصول</button>
                            </div>
                        </div><!-- Button Group End -->

                    </form>
                </div>

            </div><!-- Add or Edit Product End -->

        </div>